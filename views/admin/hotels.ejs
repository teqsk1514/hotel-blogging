<% include adminPartials/adminHeader %>
<div style="padding:1rem 0" class="container">
    <div class="card" style="width: 100%">
        <div style="background-color:#BDBDBD" class="card-header">
            Hotel Details
        </div>
        <% hotels.reverse().forEach(function(hotel){ %>
        <div style="padding: 1rem 1rem;" class="row">
            <div class="col-lg-3">
                <%= hotel._id %>
            </div>
            <div class="col-lg-2">
                <%= hotel.name %>
            </div>
            <div class="col-lg-2">
                <%= hotel.created_at %>
            </div>
            <div class="col-lg-2">
                <%= hotel.updated_at %>
            </div>
            <div class="col-lg-2">
                <%= hotel.author.username %>
            </div>
            <div class="col-lg-1">
                <a href="/admin/hotel/delete/<%= hotel._id %>">
                    <i style="color:#ba000d" class="far fa-trash-alt"></i>
                </a>
            </div>

        </div>
        <div class="dropdown-divider"></div>
        <% });%>
    </div>
</div>
<% include adminPartials/adminFooter %>