<% include ../partials/header %>
<div style="margin-bottom:2rem;" class="container">
    <div class="card">
        <div class="card-body">
            <h1 style="text-align:center">Add a New Hotel</h1>
            <div class="row justify-content-around">
                <div class="col-lg-8">
                    <form action="/hotels" method="POST">
                        <div class="form-group">
                            <label for="formGroupExampleInput" class="bmd-label-floating">Name</label>
                            <input name="name" required type="text" class="form-control" id="formGroupExampleInput">
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput" class="bmd-label-floating">Price</label>
                            <input class="form-control" required type="number" name="price" min="10" step="100" />
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput" class="bmd-label-floating">Image Url</label>
                            <input class="form-control" required type="text" name="image" />
                        </div>
                        <div class="form-group">
                            <label for="formGroupExampleInput" class="bmd-label-floating">Description</label>
                            <textarea rows="6" required class="form-control" type="text" name="description"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-raised btn-success">Submit</button>
                            <a class="btn btn-raised btn-secondary" href="/hotels">Go Back</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

<% include ../partials/footer %>