<div style="margin-bottom:2rem;" class="container">
    <div style="margin-bottom:2rem">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="slider" src="https://images.pexels.com/photos/258154/pexels-photo-258154.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940"
                        alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 style="font-family: 'Bangers', cursive;font-size: 2.2em;" class="Slider_caption">
                            Welcome to LakeSide
                        </h2>
                    </div>
                </div>
                <% hotels.forEach(function(hotel){ %>
                <div class="carousel-item">
                    <img class="slider" src="<%=hotel.image %>" alt="<%=hotel.name %>">
                    <div class="carousel-caption d-none d-md-block">
                        <h2 style="font-family: 'Bangers', cursive;font-size: 2.2em;" class="Slider_caption">
                            <%=hotel.name %>
                        </h2>
                    </div>
                </div>
                <% });%>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <header class="jumbotron">
        <h1 style="color:bisque;">Welcome To LakeSide!! </h1>
        <p style="color:bisque;">Take a look to our all categories of Hotels and Resorts</p>
        <p>
            <a style="background-color:#212121;" class="btn btn-raised btn-primary" href="/hotels/new">
                Add a New Hotel
            </a>

        </p>

    </header>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% hotels.reverse().forEach(function(hotel){ %>
        <div class="col-md-3 col-sm-6">
            <div style="margin-bottom:2rem;" class="card">
                <img class="card-img-top" width="350" height="200" src="<%= hotel.image %>" alt="">
                <!-- <img src="<%= hotel.image %>" width="350" height="200" /> -->
                <div class="card-body">
                    <h5 style="font-family: 'Bangers', cursive;font-size: 2.2em;" class="card-title">
                        <%= hotel.name %>
                    </h5>
                    <p>
                        <!-- <a style="background-color:#484848" href="/hotels/<%= hotel._id %>" class="btn btn-raised btn-primary">More
                            info</a> -->
                        <a href="/hotels/<%= hotel._id %>">
                            <button type="button" class="btn btn-raised">More info</button>
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <% });%>
    </div>
    <div>

    </div>

</div>

