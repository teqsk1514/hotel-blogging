    <link rel="stylesheet" href="/stylesheets/main.css">
</head>

<body>
    <nav style="margin-bottom:2rem;background-color:#212121" class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/hotels">
            <!-- <img id="logo" src="http://www.lakesidegrain.com/precisionag/images/lakeside-logo-solo.png" alt="Website Logo" /> -->
            <h2>
                LakeSide
            </h2>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNavDropdown">
            <ul class="navbar-nav">
                <!-- <li class="nav-item" style="margin-right:1rem;">
                    <a class="nav-link" href="/hotels">
                        <button type="button" class="btn btn-raised btn-info">
                            Home
                        </button>
                    </a>
                </li> -->

                <% if(!currentUser){ %>
                <li style="margin-right:1rem;" class="nav-item">
                    <a class="nav-link" href="/login">
                        <button type="button" class="btn btn-raised">
                            Login
                        </button>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/register">
                        <button type="button" class="btn btn-raised">
                            Register
                        </button>
                    </a>
                </li>
                <% } else{ %>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        <button disabled style="color:bisque ;cursor:auto;" type="button" class="btn">
                            Signed In As
                            <%=currentUser.username %>
                        </button>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/booked">
                        <button type="button" class="btn btn-raised">
                            My Bookings
                        </button>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">
                        <button type="button" class="btn btn-raised">Logout</button>
                    </a>
                </li>
                <!-- <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        User
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#">
                            <%=currentUser.username %></a>
                        <a class="dropdown-item" href="#">Log-Out</a>
                    </div>
                </li> -->
                <% } %>
            </ul>
        </div>
    </nav>


    <div class="container">
        <% if(error && error.length>0){ %>
        <div class="card">
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        </div>
        <% } %>
        <% if(success && success.length>0){ %>
        <div class="card">
            <div class="alert alert-success">
                <%= success %>
            </div>
        </div>
        <% } %>
    </div>