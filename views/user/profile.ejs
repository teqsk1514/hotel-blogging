<% include ../partials/header %>
<div class="container">
    <div style="background-color:#f5f5f5" class="card">
        <div class="card-body">
            <div class="row justify-content-between">
                <div class="col-lg-2">
                    <a href="/user/profile/edit" style="background-color:#212121;margin-bottom: 1rem" class="btn btn-raised btn-primary">
                        <i class="fas fa-pencil-alt"></i> Edit Your Profile</a>
                </div>
                <div class="col-lg-3">
                    <a style="background-color:#212121;margin-bottom: 1rem" class="btn btn-raised btn-primary" href="/hotels/new">
                        <i class="fas fa-plus"></i> Add a New Hotel
                    </a>
                </div>
            </div>
            <div>
                <h3>
                    Your Hotels
                </h3>
                <%if(len === 0){ %>
                <div>
                    <h4>
                        You Dont have any Hotels
                    </h4>

                </div>
                <% }%>

                <div class="card">
                    <% userHotelDetails.reverse().forEach(function(hotel){ %>
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-3">
                                    <img class="image-responsive" height="100%" width="100%" src="<%=hotel.image %>" />
                                </div>
                                <div class="col-lg-9">
                                    <h5 class="card-title">
                                        <%= hotel.name %>
                                    </h5>
                                    <p class="card-text">
                                        Description:
                                        <%= hotel.description %>
                                    </p>
                                    <p class="card-text">
                                        Created On:
                                        <%= hotel.created_at %>
                                    </p>
                                    <p class="card-text">
                                        Price:
                                        <%= hotel.price %>
                                    </p>
                                </div>

                            </div>
                            <div style="margin-top:1rem;" class="row">
                                <div class="col-lg-4">
                                    <a href="/hotels/<%= hotel.id %>" style="background-color:#3d00e0" class="btn btn-raised btn-primary">See
                                        Hotel Details</a>
                                </div>
                                <div class="col-lg-4">
                                    <a href="/hotels/<%= hotel._id  %>/edit" class="btn btn-xs btn-warning">
                                        <i class="far fa-edit fa-lg"></i> Edit</a>
                                </div>
                                <form class="del col-lg-4" action="/hotels/<%=hotel._id %>?_method=DELETE" method="POST">
                                    <button class="btn btn-xs btn-danger"><i class="fas fa-trash fa-lg"></i> Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>


