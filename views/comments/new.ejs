    <div class="row justify-content-around">
        <div class="col-lg-6">
            <div class="card">
                <div class="container">
                    <h2 style="text-align:center">Add a New Comment to
                        <%=hotel.name %>
                    </h2>
                    <form action="/hotels/<%= hotel._id %>/comments" method="POST">
                        <!-- <div class="form-group">
                                    <input required class="form-control" type="text" name="comment[text]" placeholder="Comments" />
                                </div> -->
