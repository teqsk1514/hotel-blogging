                            <label for="formGroupExampleInput" class="bmd-label-floating">New Comments</label>
                            <input name="comment[text]" required type="text" class="form-control" id="formGroupExampleInput">
                        </div>
                        <div class="form-group">
                            <button style="background-color: #263238;color: white;" class="btn btn-raised btn-block">Submit!</button>
                        </div>
                        <a style="background-color:#263238" class="btn btn-raised btn-info" href="/hotels/<%= hotel._id %>">Go
