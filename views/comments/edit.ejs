<% include ../partials/header %>
<div class="container">
    <div class="card">
        <div class="card-body">
            <h1 style="text-align:center">Edit Comment</h1>
            <div style="width:30%; margin: 25px auto;">
                <form action="/hotels/<%= hotel_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="formGroupExampleInput" class="bmd-label-floating">New Comments</label>
                        <input name="comment[text]" value="<%=comment.text %>" required type="text" class="form-control"
                            id="formGroupExampleInput">
                    </div>
                    <div class="form-group">
                        <button style="background-color: #263238;color: white;" class="btn btn-raised btn-block">Submit!</button>
                    </div>
                    <a style="background-color:#263238" class="btn btn-raised btn-info" href="/hotels/<%= hotel_id %>">Go
                        Back</a>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>